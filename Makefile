NAME = fdf

CC = cc

CFLAGS = -Wall -Wextra -Werror -g3 -I./headers/

RM = rm -rf

SRCS = $(addprefix srcs/, fdf.c parsing/parsing.c pixel/pixel.c mooves/rotations.c data/dots.c)

OBJS = $(SRCS:.c=.o)

all: first_header $(NAME) second_header

$(NAME): $(OBJS)
	$(MAKE) -sC ./libft
	$(MAKE) -sC ./minilibx
	$(CC) $(CFLAGS) -o $@ $^ libft/libft.a minilibx/libmlx.a -lXext -lX11 -lm

clean:
	$(MAKE) clean -sC ./libft
	$(MAKE) clean -sC ./minilibx
	$(RM) $(OBJS)

fclean: clean
	$(MAKE) fclean -C ./libft
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re

info: header

first_header:
	@echo "\n $$FIRST_HEADER \n"

